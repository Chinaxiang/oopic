{
  "manifest_version": 2,
  "name": "喔喔图床",
  "short_name": "喔喔图床",
  "description": "简单好用的图床,支持选择/拖拽/粘贴上传图片,并生成图片地址,HTML,UBB和Markdown等格式,支持浏览和删除历史记录",
  "version": "1.0.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon_38.png"
  },
  "options_page": "option.html",
  "permissions": [
    "storage", 
    "notifications", 
    "tts", 
    "webRequest", 
    "webRequestBlocking", 
    "*://*/", 
    "tabs", 
    "contextMenus",
    "webNavigation",
    "clipboardWrite",
    "clipboardRead"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
